generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://myfacets:myfacets@localhost:5432/myfacets?"
}  

model User {
  id          String   @id @default(uuid())
  email       String   @unique
  password    String
  first_name  String
  middle_name String
  last_name   String
  createdAt   DateTime @default(now())
  updateAt    DateTime @updatedAt()
}
